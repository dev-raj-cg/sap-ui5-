<mvc:View controllerName="procticeproject.controller.Worklist"
 xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core" 
   xmlns:img="sap.m.Image"
   xmlns:fb="sap.ui.comp.filterbar" 
   xmlns:semantic="sap.f.semantic">
    <Label labelFor="productInput" />

    <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
        <semantic:titleHeading>
            <Title text="{i18n>worklistTitle}" level="H2" />
        </semantic:titleHeading>
        <!-- <xmlns:img>
            <Image src="https://talent.capgemini.com/media_library/Medias/â€¦os/Promo_Image_310px_X_90px_Toastmasters_club.jpg" alt="Capgemini Image"/>
        </xmlns:img> -->
        <semantic:content>
            <Table
                id="table"
                width="auto"
                items="{
                    path: '/Alphabetical_list_of_products',
                    sorter: {
                        path: 'ProductName',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                selectionChange=".onSelect"
                >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title id="tableHeader" text="{worklistView>/worklistTableTitle}" level="H3" />
                        <ToolbarSpacer />
                        <!-- <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField> -->

                        <!--input filed with the data suggestion-->

                        <Input width="20%" id="productInput" 
                                placeholder="Search your product here" 
                                showSuggestion="true" 
                                showValueHelp="true" 
                                valueHelpRequest=".onValueHelpRequest" 
                                suggestionItems="{/Alphabetical_list_of_products}">
                                <suggestionItems>
                                <core:Item text="{ProductName}" />
                                </suggestionItems>
                        </Input>
                        <Button icon="sap-icon://search" press = "onFind"  />
                        	<Button
                                id = "downldBtn"
				                text="Click to download"
				                press="handlePopoverPress"
				              
                               />
                        <!-- <SearchField width="20%"
                        	enableSuggestions="true"
			                search=".onSearch"
			                suggest=".onSuggest"
			                suggestionItems="{'/Alphabetical_list_of_products'}">
                            <suggestionItems>
                            <core:ListItem text="{ProductName}" />
                            </suggestionItems>
                        </SearchField> -->
                        







                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="nameColumn">
                        <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle" />
                    </Column>
                    <Column id="unitNumberColumn" hAlign="End">
                        <Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation" press=".onPress">
                        <cells>
                            <ObjectIdentifier title="{ProductName}" />
                            <ObjectNumber number="{
                                    path: 'UnitPrice',
                                    formatter: '.formatter.numberUnit'
                                }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress" />
        </semantic:sendEmailAction>
    </semantic:SemanticPage>
</mvc:View>
