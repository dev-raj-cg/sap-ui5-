<mvc:View
    controllerName="dismentle.controller.Home"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
   
				<Page id="page" title="{i18n>title}">
					<Panel headerText="{i18n>Operations}">
						<OverflowToolbar height="auto">
							<ToolbarSpacer/>
							<RadioButtonGroup id="rbg4" class="sapUiMediumMarginBottom" columns="2" select="oSelection">
								<RadioButton id="RB4-1" text="{i18n>textRdB1}" selected="true"/>
								<RadioButton id="RB4-2" text="{i18n>textRdb2}"/>
								<!--<RadioButton id="RB4-3" text="{i18n>textRdb3}"/>-->
							</RadioButtonGroup>
							<ToolbarSpacer/>
						</OverflowToolbar>
					</Panel>
					<f:SimpleForm id="SimpleFormToolbar" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4"
						labelSpanS="12" adjustLabelSpan="true" visible="true">
						<Label id="_IDGenLabel4" text="{i18n>labEquip}" labelFor="input-a" required="true"/>
						<Input id="input-equip" value="{/EquipInstall/Equipment}" width="20rem"/>
						<Label id="_IDGenLabel5" text="{i18n>labEquip}" labelFor="input-a"/>
						<SearchField width="20rem" visible="false" id="ser" search="onSearch"/>
						<Label id="_IDGenLabel7" text="{i18n>labFunc}" labelFor="input-a"/>
						<Input id="input-funloc" value="{/Equipment/Funcloc}" width="20rem"/>
						<Label id="_IDGenLabel8" text="{i18n>labSup}" labelFor="input-a"/>
						<Input id="input-superord.equip" width="20rem"/>
					</f:SimpleForm>
					<footer>
						<OverflowToolbar id="otbFooter">
							<ToolbarSpacer/>
							<Button id="btnAcc" type="Accept" text="{i18n>btnInstall}" press=".oAccept">
								<layoutData>
									<OverflowToolbarLayoutData priority="NeverOverflow"/>
								</layoutData>
							</Button>
							<Button id="btnCan" type="Reject" text="{i18n>btnRejc}" press="oReject">
								<layoutData>
									<OverflowToolbarLayoutData priority="NeverOverflow"/>
								</layoutData>
							</Button>
							<ToolbarSpacer/>
						</OverflowToolbar>
					</footer>
				</Page>
			
</mvc:View>
