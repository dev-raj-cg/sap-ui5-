<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="project1234.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <ToolbarSpacer />
        <HBox
            alignItems="Center"
            justifyContent="Center"
        >
            <ToggleButton
                id="tb1"
                text="Install"
                type="Default"
                class="mtbtn"
                press="oSelection"
            />
            <ToggleButton
                id="tb2"
                text="Dismantle"
                type="Default"
                class="mtbtn"
                press="oSelection"
            />
        </HBox>
        <ToolbarSpacer />

        <form:SimpleForm class="panCss">
            <HBox
                justifyContent="Center"
                alignContent="Center"
                alignItems="Center"
                fitContainer="true"
            >
                <items>
                    <Label
                        id="eqiLab"
                        text="Equipment No"
                    />

                    <ToolbarSpacer />
                    <Input
                        id="equiInp"
                        placeholder="Enter Equipment No."
                        width="15rem"
                        valueHelpRequest="equipmentValueHelpRequested"
                        showValueHelp="true"
                    />
                </items>
            </HBox>
        </form:SimpleForm>
    </Page>
</mvc:View>
