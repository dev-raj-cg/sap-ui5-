<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="project1234.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
       
        <Panel>
            <FlexBox renderType="Div">
                <Label
                    id="eqiLab"
                    text="Equipment No"
                    required="true"
                />
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
                <Input
                    id="equiInp"
                    placeholder="Enter Equipment No."
                    width="15rem"
                    valueHelpRequest="equipmentValueHelpRequested"
                    showValueHelp="true"
                />
            </FlexBox>
        </Panel>
        <FlexBox
            height="100px"
            alignItems="Start"
            justifyContent="Center"
        >
            <Button
                id="chkBtn"
                text="Submit"
                press="onPress"
            />
			<Button
                id="forSerialize"
                text="For serialize equip"
                press="onSerial"
            />

        </FlexBox>
    </Page>
</mvc:View>
