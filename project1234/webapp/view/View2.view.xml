<mvc:View
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    controllerName="project1234.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <Page
                id="page"
                title="{i18n>title}"
            >
                <Panel>
                    <FlexBox
                        justifyContent="SpaceAround"
                        alignItems="Center"
                        class="myFlexContainer"
                    >
                        <Title text="Without Serialized" />
                    </FlexBox>
                </Panel>

                <FlexBox
                    id="flbx"
                    height="100px"
                    alignItems="Start"
                    justifyContent="Center"
                >
                    <Button
                        id="instBtn"
                        text="Install"
                        type="Emphasized"
                        class="mtbtn sapUiSizeCompactAc sapMBtnInnerAc sapMBtnInnerAc"
                    />
                    <Button
                        id="distBtn"
                        text="Dismantle"
                        type="Reject"
                        class="mtbtn"
                    />
                </FlexBox>

                <Panel>
                    <f:SimpleForm
                        id="SimpleFormToolbar"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="4"
                        labelSpanL="3"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="true"
                        visible="true"
                    >
                        <Label
                            id="_IDGenLabel4"
                            text="Equipment"
                            labelFor="input-a"
                            required="true"
                        />
                        <Input
                            id="input-equip"
                            valueHelpRequest="equipmentValueHelpRequested"
                            showValueHelp="true"
                            width="15rem"
                        />
                        <Label
                            id="_IDGenLabel5"
                            text="Func.Loc/Superord.Equip"
                            required="true"
                            labelFor="input-a"
                        />
                        <SearchField
                            width="15rem"
                            visible="false"
                            id="ser"
                            search="onSearch"
                        />
                        <Label
                            id="_IDGenLabel7"
                            text="Func.Loc/Superord.Equip"
                            labelFor="input-a"
                        />
                        <Input
                            id="input-funloc"
                            visible="true"
                            valueHelpRequest="FuncSupValHelpReq"
                            showValueHelp="true"
                            value="{/Equipment/Funcloc}"
                            width="15rem"
                        />
                        <!--<Label id="_IDGenLabel8" text="{i18n>labSup}" labelFor="input-a"/>-->
                        <!--<Input id="input-superord.equip" width="20rem"/>-->
                    </f:SimpleForm>
                </Panel>

                <footer>
                    <Toolbar id="otbFooter">
                        <ToolbarSpacer />
                        <Button
                            id="btnAcc"
                            type="Accept"
                            text="Install"
                            press=".oAccept"
                            width="30%"
                        >
                            <layoutData>
                                <!--<OverflowToolbarLayoutData priority="NeverOverflow"/>-->
                                <FlexItemData growFactor="2" />
                            </layoutData>
                        </Button>
                        <Button
                            id="btnCan"
                            type="Reject"
                            text="Cancel"
                            press="oReject"
                            width="30%"
                        >
                            <layoutData>
                                <!--<OverflowToolbarLayoutData priority="NeverOverflow"/>-->
                                <FlexItemData growFactor="2" />
                            </layoutData>
                        </Button>
                        <ToolbarSpacer />
                    </Toolbar>
                </footer>
            </Page>
        </App>
    </Shell>
</mvc:View>
